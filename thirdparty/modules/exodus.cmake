set(EXODUS_NAME exodus)

if(NOT ENABLE_EXODUS)
  return()
endif()

tpl_dowload_path( URL ${EXODUS_URL} ${TPL_DOWNLOAD_PATH} )

ExternalProject_Add(${EXODUS_NAME}
 DEPENDS ${NETCDF_NAME}
 URL ${URL}/${EXODUS_TGZ}
 URL_MD5 ${EXODUS_MD5}
 UPDATE_COMMAND ""
 PATCH_COMMAND patch -p0 < ${THIRDPARTY_PATCH_DIR}/exodus.patch
 CONFIGURE_COMMAND ${CMAKE_COMMAND}
   -DCMAKE_BUILD_TYPE:STRING=${CMAKE_BUILD_TYPE}
   -DCMAKE_CXX_COMPILER:FILEPATH=${CMAKE_CXX_COMPILER}
   -DCMAKE_CXX_FLAGS:STRING=${CMAKE_CXX_FLAGS}
   -DCMAKE_C_COMPILER:FILEPATH=${CMAKE_C_COMPILER}
   -DCMAKE_C_FLAGS:STRING=${CMAKE_C_FLAGS}
   -DCMAKE_Fortran_COMPILER:FILEPATH=${CMAKE_Fortran_COMPILER}
   -DCMAKE_Fortran_FLAGS:STRING=${CMAKE_Fortran_FLAGS}
   -DBUILD_SHARED:BOOL=OFF
   -DBUILD_TESTING:BOOL=OFF
   -DNETCDF_NCDUMP:PATH=${CMAKE_INSTALL_PREFIX}/bin/ncdump
   -DNETCDF_SO_ROOT:PATH=${CMAKE_INSTALL_PREFIX}/lib/shared
   -DNETCDF_INCLUDE_DIR:PATH=${CMAKE_INSTALL_PREFIX}/include
   -DNETCDF_LIBRARY:PATH=${NETCDF_LIBRARIES}
   -DHDF5HL_LIBRARY:PATH=${HDF5_HL_LIBRARIES}
   -DHDF5_LIBRARY:PATH=${HDF5_LIBRARIES}
   -DSZIP_LIBRARY:PATH=${SZIP_LIBRARIES}
   -DZLIB_LIBRARY=${ZLIB_LIBRARIES}
   -DPYTHON_INSTALL:PATH=${CMAKE_INSTALL_PREFIX}/python
   -DCMAKE_INSTALL_PREFIX:PATH=${CMAKE_INSTALL_PREFIX}
   <SOURCE_DIR>/exodus
)
