set(NETCDF_NAME netcdf)

if(NOT ENABLE_NETCDF)
  return()
endif()

tpl_dowload_path( URL ${NETCDF_URL} ${TPL_DOWNLOAD_PATH} )

ExternalProject_Add(${NETCDF_NAME}
  DEPENDS ${HDF5_NAME}
  URL ${URL}/${NETCDF_TGZ}
  URL_MD5 ${NETCDF_MD5}
  UPDATE_COMMAND ""
  PATCH_COMMAND patch -p0 < ${THIRDPARTY_PATCH_DIR}/netcdf.patch
  CMAKE_ARGS
    -DCMAKE_BUILD_TYPE:STRING=${CMAKE_BUILD_TYPE}
    -DCMAKE_C_COMPILER:FILEPATH=${CMAKE_C_COMPILER}
    -DCMAKE_C_FLAGS:STRING=${CMAKE_C_FLAGS}
    -DCMAKE_EXE_LINKER_FLAGS:STRING=${CMAKE_EXE_LINKER_FLAGS} ${SZIP_LIBRARY}
    -DBUILD_SHARED_LIBS:BOOL=OFF
    -DENABLE_TESTS=OFF
    -DENABLE_DAP=OFF 
    -DZLIB_LIBRARY:FILEPATH=${ZLIB_LIBRARIES}
    -DSZIP_LIBRARY:FILEPATH=${SZIP_LIBRARIES}
    -DHDF5_LIB:FILEPATH=${HDF5_LIBRARIES}
    -DHDF5_HL_LIB:FILEPATH=${HDF5_HL_LIBRARIES}
    -DHDF5_INCLUDE_DIR:PATH=${CMAKE_INSTALL_PREFIX}/include
    -DCMAKE_INSTALL_LIBDIR:PATH=lib
    -DCMAKE_INSTALL_PREFIX:PATH=${CMAKE_INSTALL_PREFIX}
)

set(NETCDF_INCLUDE_DIR ${CMAKE_INSTALL_PREFIX}/include)
set(NETCDF_LIBRARIES   ${CMAKE_INSTALL_PREFIX}/lib/libnetcdf.a)
